@model SimpleSocialNetwork.Models.ApplicationUser
@{
    ViewData["Title"] = "Edit user profile";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PatronymicName" class="control-label"></label>
                <input asp-for="PatronymicName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" type="date" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Hobbies" class="control-label"></label>
                <textarea asp-for="Hobbies" rows="4" cols="50" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
 </div>

